<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/linearlayout1"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP地址" />

        <TextView
            android:id="@+id/ip2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ip1" />

        <TextView
            android:id="@+id/selectCar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ip1"
            android:text="请选择一个小车：" />
        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@+id/ip2"-->
        <!--            android:id="@+id/radio1"/>-->

        <TextView
            android:id="@+id/txt_car1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selectCar2"
            android:layout_marginStart="3dp"
            android:text="离线"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_car2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selectCar2"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/txt_car1"
            android:text="离线"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_car3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selectCar2"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/txt_car2"
            android:text="离线"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_car4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selectCar2"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/txt_car3"
            android:text="离线"
            android:textColor="@color/black" />


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/txt_car1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selectCar2"
                android:checked="true"
                android:onClick="onRadioButtonClicked"
                android:text="主"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:clickable="false"
                android:enabled="false"
                android:onClick="onRadioButtonClicked"
                android:text="从一"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:enabled="false"
                android:onClick="onRadioButtonClicked"
                android:text="从二"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:enabled="false"
                android:onClick="onRadioButtonClicked"
                android:text="从三"
                android:textSize="15sp" />

        </RadioGroup>


        <TextView
            android:id="@+id/speedTxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup"
            android:text="速度：" />

        <TextView
            android:id="@+id/speedTxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup"
            android:layout_toEndOf="@+id/speedTxt1"
            android:text="30 m/s" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekBar_speed"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioGroup"
            android:layout_toEndOf="@+id/speedTxt2"
            android:max="100"
            android:progress="30" />


        <LinearLayout
            android:id="@+id/control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar_speed"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_stop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/round_button"
                        android:onClick="sendStop"
                        android:text="STOP" />

                    <ImageButton
                        android:id="@+id/ibtn_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/btn_stop"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        android:onClick="sendUp"
                        app:srcCompat="@drawable/ic_up" />


                    <ImageButton
                        android:id="@+id/ibtn_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btn_stop"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        android:onClick="sendDown"
                        app:srcCompat="@drawable/ic_down" />

                    <ImageButton
                        android:id="@+id/ibtn_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/btn_stop"
                        android:background="@color/white"
                        android:onClick="sendLeft"
                        android:src="@drawable/ic_left" />

                    <ImageButton
                        android:id="@+id/ibtn_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/btn_stop"
                        android:background="@color/white"
                        android:onClick="sendRight"
                        android:src="@drawable/ic_right" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/selectCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/control"
            android:text="选择需要编队车辆:" />

        <TextView
            android:id="@+id/car1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectCar"
            android:text="从车一" />

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectCar"
            android:layout_alignBaseline="@+id/car1"
            android:layout_toEndOf="@+id/car1"
            android:onClick="onCheckboxClicked" />

        <TextView
            android:id="@+id/car2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectCar"
            android:layout_toEndOf="@+id/checkbox1"
            android:text="从车二" />

        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectCar"
            android:layout_alignBaseline="@+id/car2"
            android:layout_toEndOf="@+id/car2"
            android:onClick="onCheckboxClicked" />

        <TextView
            android:id="@+id/car3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectCar"
            android:layout_toEndOf="@+id/checkbox2"
            android:text="从车三" />

        <CheckBox
            android:id="@+id/checkbox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectCar"
            android:layout_alignBaseline="@+id/car2"
            android:layout_toEndOf="@id/car3"
            android:onClick="onCheckboxClicked" />

        <TextView
            android:id="@+id/formTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkbox1"
            android:text="参与编队车辆:" />

        <TextView
            android:id="@+id/masterCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/formTxt"
            android:text="主车  " />

        <TextView
            android:id="@+id/formCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/formTxt"
            android:layout_toEndOf="@+id/masterCar" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="下一页" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toEndOf="@+id/linearlayout1"
        android:orientation="vertical" />
</RelativeLayout>