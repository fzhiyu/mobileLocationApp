        <!--                android:text="参与编队车辆:" />-->

        <!--            <TextView-->
        <!--                android:id="@+id/masterCar"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_below="@id/formTxt"-->
        <!--                android:text="主车  " />-->

        <!--            <TextView-->
        <!--                android:id="@+id/formCar"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_below="@id/formTxt"-->
        <!--                android:layout_marginStart="8dp"-->
        <!--                android:layout_toEndOf="@+id/masterCar" />-->
    </RelativeLayout>
</RelativeLayout>